<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @twitter.username %></h1>
    <a href="<%= url_for :action => :show, :id => @twitter.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @twitter.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @twitter.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="twitter[username]" class="fieldLabel">Username</label>
            <input type="text" id="twitter[username]" name="twitter[username]" value="<%= @twitter.username %>" <%= placeholder( "Username" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
